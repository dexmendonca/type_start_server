{
  "name": "type_start_server",
  "version": "0.0.1",
  "description": "start project with typescript (server edition)",
  "main": "dist/app/server.js",
  "scripts": {
    "build": "rm dist -Rf && tsc  -b && cp ./package.json ./dist/package.json",
    "dev": "nodemon --watch src --watch ./public --exec 'ts-node src/server.ts' -e ts,js,njk,html,css,json",
    "build:fast": "rm dist -Rf && sucrase ./src -d ./dist --transforms typescript,imports && cp ./package.json ./dist/package.json",
    "dev:fast": "nodemon --watch src --watch public --exec 'sucrase-node app/src/server.ts' -e ts,js,njk,html,css,json",
    "rebuild-locks": "rm node_modules -Rf && npm i && rm node_modules -Rf && yarn install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dexmendonca/type_start_server.git"
  },
  "author": "André Mendonça e Silva <dexmendoncadev@gmail.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/dexmendonca/type_start_server/issues"
  },
  "homepage": "https://github.com/dexmendonca/type_start_server#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/node": "^16.3.3",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "eslint": "^7.30.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "nodemon": "^2.0.12",
    "pm2": "^5.1.0",
    "sucrase": "^3.20.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "express": "^4.17.1"
  }
}
